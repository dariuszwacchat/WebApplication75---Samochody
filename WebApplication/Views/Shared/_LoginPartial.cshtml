
<div class="df centery">
    @if (SignInManager.IsSignedIn(User))
    {
        <p class="mr-20 c-gray">
            Witaj @User.Identity.Name
        </p>

        <a asp-action="Index" asp-controller="Account" class="b c-white">
            Twoje konto
        </a>
    }
    else
    {
        <div class="df">
            <a asp-action="Login" asp-controller="Account" class="b c-white">Zaloguj</a>
            <span> / </span>
            <a asp-action="Register" asp-controller="Account" class="ml-5 b c-white">Zarejestruj</a>
        </div>
    }
</div>